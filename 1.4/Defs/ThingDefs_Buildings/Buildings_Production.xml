<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--========================= Glitter Glass Synthesizer =============================-->

    <ThingDef ParentName="BenchBase">
        <defName>SW_Synthesizer</defName>
        <label>glitter glass synthesizer</label>
        <description>A powerful machine capable of crushing stone and steel into fine powder.\n\nThrough means of a crystilline lens within, the powder is then inbued with an additive hue to produce any one of seven differently colored powders.</description>
        <thingClass>StevesWalls.Building_Synthesizer</thingClass>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>250</pathCost>
        <minifiedDef />
        <thingCategories Inherit="false" />
        <size>(3, 2)</size>
        <castEdgeShadows>false</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <interactionCellOffset>(0, 0, -1)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <interactionCellIcon>SW_PrinterInteractionCellIcon</interactionCellIcon>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <designationCategory>Production</designationCategory>
        <uiOrder>2530</uiOrder>
        <uiIconPath>Things/Building/Workbenches/Synthesizer/On/SW_GlitterGlassSynthesizerOn</uiIconPath>
        <uiIconScale>1.10</uiIconScale>
        <surfaceType>None</surfaceType>
        <designationHotKey>Misc12</designationHotKey>
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
        <drawerType>MapMeshAndRealTime</drawerType>
        <tickerType>Normal</tickerType>
        <rotatable>false</rotatable>
        <statBases>
            <MaxHitPoints>300</MaxHitPoints>
            <WorkToBuild>5000</WorkToBuild>
            <Flammability>0.15</Flammability>
        </statBases>
        <costList>
            <Steel>200</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
            <Plasteel>3</Plasteel>
            <Gold>1</Gold>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>350</basePowerConsumption>
                <shortCircuitInRain>true</shortCircuitInRain>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Glower">
                <glowRadius>3</glowRadius>
                <colorPickerEnabled>true</colorPickerEnabled>
            </li>
            <li Class="StevesWalls.CompProperties_SynthesizerGraphics">
                <graphicLayersOff>
                    <li>
                        <texPath>Things/Building/Workbenches/Synthesizer/Off/SW_GlitterGlassSynthesizerOff</texPath>
                        <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>Cutout</shaderType>
                        <drawSize>(3, 3)</drawSize>
                    </li>
                </graphicLayersOff>
                <graphicLayersOn>
                    <li>
                        <texPath>Things/Building/Workbenches/Synthesizer/On/SW_GlitterGlassSynthesizerOn</texPath>
                        <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>Cutout</shaderType>
                        <drawSize>(3, 3)</drawSize>
                    </li>
                </graphicLayersOn>
                <graphicLayersOnAndInUse>
                    <li>
                        <texPath>Things/Building/Workbenches/Synthesizer/On/SW_GlitterGlassSynthesizerOnAndInUse</texPath>
                        <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>Cutout</shaderType>
                        <drawSize>(3, 3)</drawSize>
                    </li>
                </graphicLayersOnAndInUse>
            </li>
        </comps>
        <recipes>
            <li>Make_GlitterGlassPowder</li>
        </recipes>
        <graphicData>
            <texPath>Things/Building/Workbenches/Synthesizer/SW_GlitterGlassSynthesizerBlank</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Cutout</shaderType>
            <drawSize>(3, 3)</drawSize>
        </graphicData>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
        </building>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>Fabrication</li>
            <li>Electricity</li>
			<li>MicroelectronicsBasics</li>
        </researchPrerequisites>
    </ThingDef>

