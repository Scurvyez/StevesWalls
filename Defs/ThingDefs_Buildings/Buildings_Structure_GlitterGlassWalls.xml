<Defs>

    <!--========================= Blue Glitter-Glass Wall =============================-->

    <ThingDef ParentName="SW_GlitterGlassWallBase">
        <defName>SW_BlueGlitterGlassWall</defName>
        <label>blue glitter glass wall</label>
        <description>An impassable wall. Capable of holding up a roof.</description>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <designatorDropdown>SW_GlitterGlassWall</designatorDropdown>
        <graphicData>
            <texPath>Things/Building/Linked/SW_GlitterGlassWall/Blue</texPath>
            <graphicClass>Graphic_Appearances</graphicClass>
            <linkType>CornerFiller</linkType>
            <linkFlags>
                <li>Wall</li>
            </linkFlags>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
                <edgeTop>Damage/Edge</edgeTop>
                <edgeBot>Damage/Edge</edgeBot>
                <edgeLeft>Damage/Edge</edgeLeft>
                <edgeRight>Damage/Edge</edgeRight>
            </damageData>
        </graphicData>
        <uiIconPath>Things/Building/Linked/SW_GlitterGlassWall_MenuIcon</uiIconPath>
        <statBases>
            <MaxHitPoints>500</MaxHitPoints>
            <WorkToBuild>135</WorkToBuild>
            <Flammability>0.05</Flammability>
            <MeditationFocusStrength>0.22</MeditationFocusStrength>
            <Beauty>0.5</Beauty>
        </statBases>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <blockWind>true</blockWind>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>1</fillPercent>
        <coversFloor>true</coversFloor>
        <placingDraggableDimensions>1</placingDraggableDimensions>
        <tickerType>Never</tickerType>
        <rotatable>false</rotatable>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <useStuffTerrainAffordance>false</useStuffTerrainAffordance>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded> <!-- Best affordance needed for stone -->
        <holdsRoof>true</holdsRoof>
        <staticSunShadowHeight>1.0</staticSunShadowHeight>
        <blockLight>false</blockLight>
        <canOverlapZones>false</canOverlapZones>
        <fertility>0</fertility>
        <costList>
            <Steel>20</Steel>
        </costList>
        <building>
            <isInert>true</isInert>
            <ai_chillDestination>false</ai_chillDestination>
            <blueprintGraphicData>
                <texPath>Things/Building/Linked/SW_GlitterGlassWall_Blueprint_Atlas</texPath>
            </blueprintGraphicData>
        </building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTransmitter</compClass>
                <basePowerConsumption>1</basePowerConsumption>
                <transmitsPower>true</transmitsPower>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>3</glowRadius>
                <glowColor>(0,183,255)</glowColor>
            </li>
        </comps>
        <designationHotKey>Misc3</designationHotKey>
    </ThingDef>

